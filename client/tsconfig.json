{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "declaration": true,
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec..ts"
    ]
}
